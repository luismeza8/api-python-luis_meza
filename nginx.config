server {
    listen 80;
    server_name api-python.luismeza.dev;

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name api-python.luismeza.dev;

    ssl_certificate /etc/letsencrypt/live/api-python.luismeza.dev/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api-python.luismeza.dev/privkey.pem;

    location / {
        proxy_pass http://api:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
